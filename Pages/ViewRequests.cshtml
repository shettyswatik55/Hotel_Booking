@page
@model ViewRequestModel
@{
    ViewData["Title"] = "View Hotels";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Hotels</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Hotel Approval Requests</h2>
        <div class="row">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@hotel.ImagePath" class="card-img-top" alt="Hotel Image" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text"><strong>Username:</strong> @hotel.UserName</p>
                            <p class="card-text"><strong>Location:</strong> @hotel.City</p>
                            <p class="card-text"><strong>Address:</strong> @hotel.Address</p>
                            <p class="card-text"><strong>Description:</strong> @hotel.Description</p>
                            <p class="card-text"><strong>Email:</strong> @hotel.Email</p>
                            <p class="card-text"><strong>Phone:</strong> @hotel.PhoneNumber</p>
                            <p class="card-text"><strong>Status:</strong> @hotel.Status</p>

                            <form method="post">
                                <input type="hidden" name="hotelId" value="@hotel.HotelId" />

                                <button type="submit" asp-page-handler="Approve" class="btn btn-success btn-sm">
                                    Approve
                                </button>

                                <button type="submit" asp-page-handler="Reject" class="btn btn-danger btn-sm">
                                    Reject
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
