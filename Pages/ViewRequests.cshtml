@page
@model ViewRequestModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Hotels</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Available Hotels</h2>
        <div class="row">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@hotel.ImagePath" class="card-img-top" alt="Hotel Image" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text"><strong>Location:</strong> @hotel.City</p>
                            @* <p class="card-text"><strong>Rating:</strong> @hotel.Rating ⭐</p> *@
                            <p class="card-text"><strong>Description:</strong> $@hotel.Description</p>
                            <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
