@page
@model AddHotelModel
@{
    ViewData["Title"] = "Add Hotel";
}

<h2>Add Hotel</h2>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>@Model.SuccessMessage</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>@Model.ErrorMessage</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>User Name:</label>
        <input type="text" asp-for="NewHotel.UserName" readonly class="form-control" />
    </div>
    <div>
        <label>User id:</label>
        <input type="text" asp-for="NewHotel.OwnerUserId" readonly class="form-control" />
    </div>

    <div>
        <label>Hotel Name:</label>
        <input type="text" asp-for="NewHotel.Name" class="form-control" required />
        <span asp-validation-for="NewHotel.Name" class="text-danger"></span>
    </div>

    <div>
        <label>City:</label>
        <input type="text" asp-for="NewHotel.City" class="form-control" required />
        <span asp-validation-for="NewHotel.City" class="text-danger"></span>
    </div>

    <div>
        <label>Address:</label>
        <input type="text" asp-for="NewHotel.Address" class="form-control" required />
        <span asp-validation-for="NewHotel.Address" class="text-danger"></span>
    </div>

    <div>
        <label>Email:</label>
        <input type="email" asp-for="NewHotel.Email" class="form-control" />
        <span asp-validation-for="NewHotel.Email" class="text-danger"></span>
    </div>

    <div>
        <label>Phone Number:</label>
        <input type="text" asp-for="NewHotel.PhoneNumber" class="form-control" />
        <span asp-validation-for="NewHotel.PhoneNumber" class="text-danger"></span>
    </div>

    <div>
        <label>Description:</label>
        <textarea asp-for="NewHotel.Description" class="form-control" required></textarea>
        <span asp-validation-for="NewHotel.Description" class="text-danger"></span>
    </div>

    <div>
        <label>Hotel Image:</label>
        <input type="file" asp-for="HotelImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

<!-- JavaScript to trigger modals -->
<script>
    window.onload = function () {
        var successMessage = "@Model.SuccessMessage";
        var errorMessage = "@Model.ErrorMessage";

        if (successMessage) {
            var successModal = new bootstrap.Modal(document.getElementById("successModal"));
            successModal.show();
        }

        if (errorMessage) {
            var errorModal = new bootstrap.Modal(document.getElementById("errorModal"));
            errorModal.show();
        }
    };
</script>
