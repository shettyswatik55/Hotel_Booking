@page
@model SignupModel
@{
    ViewData["Title"] = "Signup";
}

<h2>Signup</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="color: red;">@Model.Message</div>
}

<form method="post">
    <label>Username:</label>
    <input type="text" asp-for="Username" required /><br /><br />

    <label>Email:</label>
    <input type="email" asp-for="Email" required /><br /><br />

    <label>Password:</label>
    <input type="password" asp-for="Password" required /><br /><br />

    <button type="submit">Signup</button>
    <!-- Button to Navigate to Login Page -->
    <p>Already have an account? <a asp-page="/Login">Login here</a></p>
</form>
